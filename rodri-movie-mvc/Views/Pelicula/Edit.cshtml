@model rodri_movie_mvc.Models.Pelicula

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar Peliculas</h1>

            <h4>Pelicula</h4>
            <hr />
            <form asp-action="Edit" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group col-12">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="FechaLanzamiento" class="control-label"></label>
                    <input asp-for="FechaLanzamiento" class="form-control" />
                    <span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="MinutosDuracion" class="control-label"></label>
                    <input asp-for="MinutosDuracion" class="form-control" />
                    <span asp-validation-for="MinutosDuracion" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Sinopsis" class="control-label"></label>
                    <input asp-for="Sinopsis" class="form-control" />
                    <span asp-validation-for="Sinopsis" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="PosterUrlPortada" class="control-label"></label>
                    <input asp-for="PosterUrlPortada" class="form-control" />
                    <span asp-validation-for="PosterUrlPortada" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="PlataformaId" class="control-label"></label>
                    <select asp-for="PlataformaId" class="form-control" asp-items="ViewBag.PlataformaId"></select>
                    <span asp-validation-for="PlataformaId" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="GeneroId" class="control-label"></label>
                    <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
                    <span asp-validation-for="GeneroId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
