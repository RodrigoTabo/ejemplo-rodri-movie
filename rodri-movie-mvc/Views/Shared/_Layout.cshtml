@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Aplicar tema (data-bs-theme) antes del render para evitar parpadeo -->
    <script>
        (function () {
            try {
                var theme = localStorage.getItem('theme');
                if (theme === 'dark') document.documentElement.setAttribute('data-bs-theme', 'dark');
            } catch (e) { }
        })();
    </script>
    <title>@ViewData["Title"] - rodri_movie_mvc</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/rodri_movie_mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">rodri_movie_mvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pelicula" asp-action="Index">Peliculas</a>
                        </li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Genero" asp-action="Index">Géneros</a>
                        </li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Plataforma" asp-action="Index">Plataformas</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center ms-2">
                        <button id="themeToggle" class="btn btn-sm btn-outline-secondary" type="button" title="Cambiar tema">🌙</button>
                    </div>
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-2">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center" asp-area="" asp-controller="Usuario" asp-action="Perfil">
                                    <i class="bi bi-person-circle me-2"></i> Perfil
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm px-3" asp-area="" asp-controller="Usuario" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Login
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm px-3" asp-area="" asp-controller="Usuario" asp-action="Registro">
                                    <i class="bi bi-person-plus me-2"></i> Registrar
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - rodri_movie_mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var btn = document.getElementById('themeToggle');
            if (!btn) return;
            // Ajustar icono inicial
            var stored = localStorage.getItem('theme');
            if (stored === 'dark') btn.textContent = '☀️';

            btn.addEventListener('click', function () {
                var current = document.documentElement.getAttribute('data-bs-theme');
                if (current === 'dark') {
                    document.documentElement.removeAttribute('data-bs-theme');
                    localStorage.setItem('theme', 'light');
                    btn.textContent = '🌙';
                } else {
                    document.documentElement.setAttribute('data-bs-theme', 'dark');
                    localStorage.setItem('theme', 'dark');
                    btn.textContent = '☀️';
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
