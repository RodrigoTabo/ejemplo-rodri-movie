@model rodri_movie_mvc.ViewModels.LoginViewModel

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm border-0 w-100" style="max-width: 420px;">
        <div class="card-body p-4 p-md-5">

            <div class="text-center mb-4">
                <h4 class="fw-bold mb-1">Registro de Usuario</h4>
                <p class="text-muted small mb-0">
                    Accedé con tus credenciales
                </p>
            </div>

            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-bg-danger mb3"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-control form-control-lg"
                           asp-for="Email"
                           placeholder="Ingrese su email"
                           type="text" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-control form-control-lg"
                           asp-for="Password"
                           placeholder="Ingrese su contraseña"
                           type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg" type="submit">
                        Entrar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
