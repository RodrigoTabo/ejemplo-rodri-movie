@model rodri_movie_mvc.ViewModels.RegistroViewModel

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm border-0 w-100" style="max-width: 460px;">
        <div class="card-body p-4 p-md-5">

            <div class="text-center mb-4">
                <h4 class="fw-bold mb-1">Registro de Usuario</h4>
                <p class="text-muted small mb-0">
                    Creá tu cuenta en pocos pasos
                </p>
            </div>

            <form method="post">

                <div class="row g-3 mb-2">
                    <div class="col-md-6">
                        <label class="form-label" asp-for="Nombre"></label>
                        <input class="form-control form-control-lg"
                               asp-for="Nombre"
                               placeholder="Tu nombre"
                               type="text" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label" asp-for="Apellido"></label>
                        <input class="form-control form-control-lg"
                               asp-for="Apellido"
                               placeholder="Tu apellido"
                               type="text" />
                        <span asp-validation-for="Apellido" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-control form-control-lg"
                           asp-for="Email"
                           placeholder="nombre@ejemplo.com"
                           type="text" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-control form-control-lg"
                           asp-for="Password"
                           placeholder="••••••••"
                           type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label" asp-for="ConfirmarPassword"></label>
                    <input class="form-control form-control-lg"
                           asp-for="ConfirmarPassword"
                           placeholder="••••••••"
                           type="password" />
                    <span asp-validation-for="ConfirmarPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid mb-4">
                    <button class="btn btn-primary btn-lg" type="submit">
                        Registrarse
                    </button>
                </div>

            </form>
            <div class="text-center">
                <p class="small text-muted mb-0">
                    ¿Ya tenés una cuenta?
                    <a asp-action="Login" class="fw-bold text-decoration-none">
                        Iniciar sesión
                    </a>
                </p>
            </div>

        </div>
    </div>
</div>
