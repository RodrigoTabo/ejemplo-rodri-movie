@model rodri_movie_mvc.Models.Pelicula
@{
    int anio = Model.FechaLanzamiento.Year;
}

<main class="container py-5">
    <div class="row g-4 g-lg-5">
        <div class="col-md-4">

            <div class="card border-0 shadow-lg movie-poster-container overflow-hidden rounded-3">
                <img alt="@Model.Titulo" class="img-fluid w-100" src="@Model.PosterUrlPortada" />
                <button class="favorite-btn border-0">
                    <span class="material-symbols-outlined fill-icon text-danger">favorite</span>
                </button>
            </div>

            <div class="card mt-4 p-3 border-secondary bg-dark">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-secondary small">@Model.Titulo</span>
                    <div class="d-flex align-items-center gap-1">
                        <span class="material-symbols-outlined text-warning fill-icon fs-5">star</span>
                        <span class="fw-bold">4.8</span>
                        <span class="text-secondary small">/ 5.0</span>
                    </div>
                </div>
                <div class="progress bg-secondary bg-opacity-25" style="height: 6px;">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: 96%"></div>
                </div>
                <p class="text-secondary text-center small mt-2 mb-0">Based on 1,240 user reviews</p>
            </div>
        </div>
        <div class="col-md-8">
            <div class="d-flex flex-column gap-3">
                <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start gap-3">
                    <div>
                        <h1 class="display-4 fw-black mb-1">Interstellar Voyage</h1>
                        <p class="text-primary fs-5 mb-0">A journey beyond the boundaries of known space</p>
                    </div>
                </div>
                <div class="d-flex flex-wrap gap-2 mt-2">
                    <span class="badge rounded-pill bg-secondary bg-opacity-25 text-light fw-medium py-2 px-3 border border-secondary border-opacity-25">@Model.Genero.Descripcion</span>
                    <span class="badge rounded-pill bg-primary d-flex align-items-center gap-1 py-2 px-3">
                        <span class="material-symbols-outlined fs-6">tv</span> @Model.Plataforma.Nombre
                    </span>
                </div>
                <div class="row g-4 py-4 my-2 border-top border-bottom border-secondary border-opacity-25">
                    <div class="col-sm-4">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-secondary bg-opacity-25 rounded-3 p-2 text-primary">
                                <span class="material-symbols-outlined">calendar_today</span>
                            </div>
                            <div>
                                <div class="text-secondary small">Fecha de Lanzamiento</div>
                                <div class="fw-bold text-uppercase small">@anio</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-secondary bg-opacity-25 rounded-3 p-2 text-primary">
                                <span class="material-symbols-outlined">schedule</span>
                            </div>
                            <div>
                                <div class="text-secondary small">Duración en minutos</div>
                                <div class="fw-bold small">@Model.MinutosDuracion Minutos</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card border-0 p-4 mb-4">
                    <h3 class="h4 fw-bold mb-3">Synopsis</h3>
                    <p class="text-secondary lh-lg mb-0">
                        @Model.Sinopsis
                    </p>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="h4 fw-bold mb-0">User Reviews</h3>
                    <a class="btn btn-link text-primary text-decoration-none fw-bold small" href="#">Write a Review</a>
                </div>
                <div class="d-flex flex-column gap-3">
                    <div class="card border-0 p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="d-flex align-items-center gap-3">
                                <div class="review-avatar">JD</div>
                                <div>
                                    <div class="fw-bold small">James Dalton</div>
                                    <div class="text-secondary" style="font-size: 0.75rem;">2 days ago</div>
                                </div>
                            </div>
                            <div class="badge rounded-pill bg-primary bg-opacity-10 text-primary d-flex align-items-center gap-1 py-1 px-2 border border-primary border-opacity-10">
                                <span class="material-symbols-outlined fill-icon fs-6">star</span>
                                <span class="fw-bold small">5.0</span>
                            </div>
                        </div>
                        <p class="text-secondary small lh-base mb-0">
                            Absolutely breathtaking. The visual effects are matched only by the emotional depth of the story. A modern masterpiece that deserves to be seen on the biggest screen possible.
                        </p>
                    </div>
                    <div class="card border-0 p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="d-flex align-items-center gap-3">
                                <div class="review-avatar" style="color: #a855f7; background: rgba(168, 85, 247, 0.2);">SR</div>
                                <div>
                                    <div class="fw-bold small">Sarah Reed</div>
                                    <div class="text-secondary" style="font-size: 0.75rem;">1 week ago</div>
                                </div>
                            </div>
                            <div class="badge rounded-pill bg-primary bg-opacity-10 text-primary d-flex align-items-center gap-1 py-1 px-2 border border-primary border-opacity-10">
                                <span class="material-symbols-outlined fill-icon fs-6">star</span>
                                <span class="fw-bold small">4.0</span>
                            </div>
                        </div>
                        <p class="text-secondary small lh-base mb-0">
                            A bit long in parts, but the payoff is incredible. The sound design alone is worth the price of admission. Highly recommend for any sci-fi enthusiast.
                        </p>
                    </div>
                    <button class="btn btn-outline-secondary border-dashed border-secondary border-opacity-25 w-100 py-3 mt-2">
                        View All 1,240 Reviews
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&amp;display=swap" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />

<style>
    :root {
        --card-bg: #1e293b;
        --border-color: #334155;
    }

    body {
        font-family: 'Inter', sans-serif;
        background: var(--bg-deep-navy);
        background: var(--bg-gradient);
        color: #f8fafc;
        min-height: 100vh;
    }

    .card {
        background-color: var(--card-bg);
        border-color: var(--border-color);
        color: #f8fafc;
    }

    .material-symbols-outlined {
        vertical-align: middle;
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    .fill-icon {
        font-variation-settings: 'FILL' 1;
    }

    .movie-poster-container {
        position: relative;
    }

    .favorite-btn {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        width: 44px;
        height: 44px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        transition: all 0.3s ease;
    }

        .favorite-btn:hover {
            background: rgba(220, 53, 69, 0.8);
            color: white;
        }

    .badge-genre {
        background-color: rgba(13, 110, 253, 0.15);
        border: 1px solid rgba(13, 110, 253, 0.3);
    }

    .list-group-item {
        background-color: transparent;
        border-color: var(--border-color);
        color: #cbd5e1;
        padding-left: 0;
        padding-right: 0;
    }

    .review-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        background: rgba(13, 110, 253, 0.2);
        color: #0d6efd;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        color: #64748b;
    }

    .breadcrumb-item a {
        color: #94a3b8;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #f8fafc;
    }
</style>