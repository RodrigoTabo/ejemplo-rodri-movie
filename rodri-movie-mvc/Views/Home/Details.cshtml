﻿@using Microsoft.AspNetCore.Identity


@model rodri_movie_mvc.Models.Pelicula
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

@{
    int anio = Model.FechaLanzamiento.Year;
}

<main class="container py-5">
    <!-- Centrado + ancho máximo para que no se vea gigante en pantallas grandes -->
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-9">

            <div class="row g-4 g-lg-5 align-items-start">
                <!-- IZQUIERDA: poster -->
                <div class="col-12 col-md-4">
                    <div class="position-sticky" style="top: 100px;">
                        <div class="card border-0 shadow-lg movie-poster-container overflow-hidden rounded-3 position-relative">
                            <img alt="@Model.Titulo" class="img-fluid w-100 d-block" src="@Model.PosterUrlPortada" />
                            <button class="favorite-btn border-0 position-absolute top-0 end-0 m-3">
                                <span class="material-symbols-outlined fill-icon text-danger">favorite</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- DERECHA: info -->
                <div class="col-12 col-md-8">
                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start gap-3">
                            <div>
                                <h1 class="display-4 fw-black mb-1">@Model.Titulo</h1>
                            </div>
                        </div>

                        <div class="d-flex flex-wrap gap-2 mt-2">
                            <span class="badge rounded-pill bg-secondary bg-opacity-25 text-light fw-medium py-2 px-3 border border-secondary border-opacity-25">
                                @Model.Genero.Descripcion
                            </span>
                            <span class="badge rounded-pill bg-primary d-flex align-items-center gap-1 py-2 px-3">
                                <span class="material-symbols-outlined fs-6">tv</span> @Model.Plataforma.Nombre
                            </span>
                        </div>

                        <div class="row g-4 py-4 my-2 border-top border-bottom border-secondary border-opacity-25">
                            <div class="col-sm-6 col-lg-4">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-secondary bg-opacity-25 rounded-3 p-2 text-primary">
                                        <span class="material-symbols-outlined">calendar_today</span>
                                    </div>
                                    <div>
                                        <div class="text-secondary small">Fecha de Lanzamiento</div>
                                        <div class="fw-bold text-uppercase small">@anio</div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6 col-lg-4">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="bg-secondary bg-opacity-25 rounded-3 p-2 text-primary">
                                        <span class="material-symbols-outlined">schedule</span>
                                    </div>
                                    <div>
                                        <div class="text-secondary small">Duración en minutos</div>
                                        <div class="fw-bold small">@Model.MinutosDuracion Minutos</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 p-4 mb-4">
                            <h3 class="h4 fw-bold mb-3">Synopsis</h3>
                            <p class="text-secondary lh-lg mb-0">@Model.Sinopsis</p>
                        </div>

                        @if(TempData["ReviewExiste"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ReviewExiste"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @* reviews *@
                        <div class="mt-5">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h3 class="h4 fw-bold mb-0">User Reviews</h3>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#CreateReviewModal">
                                    Agregar Reseña
                                </button>
                            </div>
                            <div class="list-group">
                                @foreach (var item in Model.ListaReviews)
                                {
                                    <div class="list-group-item bg-dark text-light border-secondary review-card p-4 mb-3">
                                        <div class="d-flex align-items-center mb-3">
                                            <img alt="@item.Usuario.Nombre" class="rounded-circle me-3" height="40"
                                                 src="@(string.IsNullOrEmpty(item.Usuario.ImagenUrlPerfil) ? "/images/default-avatar.png" : item.Usuario.ImagenUrlPerfil)"
                                                 onerror="this.src='/images/default-avatar.png'" width="40" />
                                            <div>
                                                <h5 class="mb-0 text-light">@string.Concat(item.Usuario.Nombre, " ", item.Usuario.Apellido)</h5>
                                                <small class="">@item.Fecha.ToShortDateString()</small>
                                            </div>
                                        </div>
                                        <div class="mb-2">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= item.Rating)
                                                {
                                                    <span class="material-symbols-outlined star-filled">star</span>
                                                }
                                                else
                                                {
                                                    <span class="material-symbols-outlined star-empty">grade</span>
                                                }
                                            }
                                        </div>
                                        <p class="mb-3">@item.Comentario</p>

                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            @if (UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Admin").Result)
                                            {
                                                <a asp-controller="Review" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">
                                                    <span class="material-symbols-outlined">edit</span> Editar
                                                </a>
                                            }
                                        }
                                    </div>
                                }
                            </div>
                        </div>


                    </div>
                </div>
            </div>

        </div>
    </div>
</main>


@{
    var reviewModel = new rodri_movie_mvc.ViewModels.ReviewViewModel
    {
        PeliculaId = Model.Id,
        PeliculaTitulo = Model.Titulo
    };
}

<partial name="~/Views/Review/_CreateReview.cshtml" model="reviewModel" />

