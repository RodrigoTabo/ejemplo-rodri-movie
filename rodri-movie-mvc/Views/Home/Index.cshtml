@model List<Pelicula>

<!-- Pagination -->
@{
    var paginaActual = ViewBag.PaginaActual as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 8;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var busqueda = ViewBag.TxtBusqueda as string ?? "";
    var generoId = ViewBag.GeneroId ?? 0;
    var plataformaId = ViewBag.PlataformaId ?? 0;
}



<div class="container my-5">
    <h2 class="text-center fw-bold mb-5">Cartelera</h2>

    <div class="container my-5">
        <form method="get" class="row g-3 align-items-end">
            <!-- Buscador -->
            <div class="col-md-4">
                <label for="buscar" class="form-label">Buscar</label>
                <input type="text" value="@busqueda" class="form-control" name="txtBusqueda" placeholder="Buscar pelicula...">
            </div>

            <!-- Género -->
            <div class="col-md-3">
                <label for="genero" class="form-label">Género</label>
                <select name="generoId" class="form-select" onchange="this.form.submit()" asp-items="@generoId"></select>
            </div>

            <!-- Plataforma -->
            <div class="col-md-3">
                <label for="plataforma" class="form-label">Plataforma</label>
                <select name="plataformaId" class="form-select" onchange="this.form.submit()" asp-items="@plataformaId"></select>
            </div>

            <!-- Botón -->
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </form>
    </div>


    <div class="row g-4">

        @foreach (var pelicula in Model)
        {
            <!-- Card 1 -->
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card movie-card h-100 border-0 overflow-hidden">
                    <div class="poster-container">
                        <img src="@pelicula.PosterUrlPortada"
                             class="card-img-top"
                             alt="@pelicula.Titulo" />
                        <div class="overlay d-flex align-items-center justify-content-center">
                            <span class="badge bg-primary fs-6 px-3 py-2">Ver detalles</span>
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center fw-semibold mb-2">@pelicula.Titulo</h5>

                        <div class="text-center mb-3">
                            <span class="text-warning fs-5">@pelicula.PromedioRating</span>
                        </div>

                        <div class="mt-auto text-center">
                            <span class="badge bg-primary fs-6">4 / 5</span>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>


@if (totalPages > 1)
{
    <nav aria-label="Paginación" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(paginaActual <= 1 ? "disabled" : "")">
                <a asp-action="Index" asp-route-txtBusqueda="@busqueda" asp-route-generoId="@generoId" asp-route-plataformaId="@plataformaId" asp-route-paginaActual="@(paginaActual - 1)" class="page-link"> Anterior</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a asp-action="Index" asp-route-paginaActual="@i" asp-route-txtBusqueda="@busqueda" asp-route-generoId="@generoId" asp-route-plataformaId="@plataformaId" class="page-link">@i</a>
                </li>
            }

            <li class="page-item @(paginaActual >= totalPages ? "disabled" : "")">
                <a asp-action="Index" asp-route-txtBusqueda="@busqueda" asp-route-generoId="@generoId" asp-route-plataformaId="@plataformaId" asp-route-paginaActual="@(paginaActual + 1)" class="page-link"> Siguiente</a>
            </li>
        </ul>
    </nav>
}


<style>
    /* Card general */
    .movie-card {
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }

        .movie-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.2);
        }

    /* Poster container */
    .poster-container {
        position: relative;
        overflow: hidden;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

        .poster-container img {
            height: 450px;
            width: 100%;
            object-fit: cover;
            transition: transform 0.3s;
        }

        .poster-container:hover img {
            transform: scale(1.05);
        }

    /* Overlay al pasar mouse */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.25);
        opacity: 0;
        transition: opacity 0.3s;
    }

    .poster-container:hover .overlay {
        opacity: 1;
    }

    /* Badge dentro del overlay */
    .overlay .badge {
        font-weight: 600;
    }

    .poster-container img {
        height: 280px; /* antes estaba 450px */
        width: 100%;
        object-fit: cover;
        transition: transform 0.3s;
    }
</style>